<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guntur.ade.app1usinggoogleplaceapi.ViewPlace">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_image_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Tempat"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place_address"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/place_open_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buka Sekarang :"
                android:textSize="18sp"
                android:textStyle="italic" />

            <RatingBar
                android:layout_margin="10dp"
                android:id="@+id/rattingBar"
                android:max="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_show_map"
                android:text="Buka di Google Maps"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
